<!DOCTYPE html>
<html>
<head>
  <title>Text-a-Friend</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <b><%= link_to "Text-a-Friend", root_path, class: "navbar-brand" %></b>
        <% if current_user %>
          <b><%= link_to "My Contacts", user_contacts_path(current_user), class: "navbar-brand" %></b>
        <% end %>
      </div>
      <ul class="nav navbar-nav navbar-right">

    <p>
      <% unless current_user %>
      <%= link_to 'Sign in', new_user_session_path, id:'text-color', class: "navbar-brand"  %>
      <%= link_to 'Sign up', new_user_registration_path, id:'text-color', class: "navbar-brand"  %>
      <% else %>
      <%= link_to current_user.email, edit_user_registration_path, id:'text-color', class: "navbar-brand"  %>
      <%= link_to 'Log out',  destroy_user_session_path, method: 'delete', id:'text-color', class: "navbar-brand"  %>
      <% end %>
  </p>
    </ul>

</div>
</nav>

<div class='container'>
  <% if alert %>
  <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
  <% end %>

  <% if notice %>
  <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
  <% end %>
  <br>

  <%= yield %>
</div>

</body>
</html>
