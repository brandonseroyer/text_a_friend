<%= form_for @message, html: { multipart: true }, remote: true do |f| %>

<div class='form-group'>
  <%= f.label :to %>
  <%= f.text_field :to, class: "form-control", required: 'required' %>
  <%= f.label :from %>
  <%= f.text_field :from, value: '5038502083', class: "form-control", required: 'required' %>
  <%= f.label :text %>
  <%= f.text_field :body, class: "form-control", required: 'required' %>
  <%= f.hidden_field :user_id, value: current_user.id %>

</div>

<div class='form-group'>
  <%= f.submit class: 'btn btn-success' %>
</div>
<% end %>
